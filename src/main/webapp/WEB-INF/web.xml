         version="3.1">

    <display-name>IPSCO TMS</display-name>
    <description>IPSCO TMS application</description>

    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>

